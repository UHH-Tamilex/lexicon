        </cit>
        <cit type="nikantu" xml:id="Tiv10.71">
            <ref target="https://archive.org/details/dli.jZY9lup2kZl6TuXGlZQdjZp7kZUy.TVA_BOK_0002448/page/88/mode/1up"><title xml:lang="ta">Tivākaram</title> 10.71 <term xml:lang="ta">iṭaiccol</term></ref>
            <q rend="block" xml:lang="ta">
                <lg>
                    <l>am, ām, em, ēm, tam, nam, num, ē,</l>
                    <l>ummē, aṉ, āṉ, uṟai, keḻu, ñāṉṟē,</l>
                    <l>al, āl, aṉṟē, eṉavē, maṉṉē,</l>
                    <l>tillai, vāṉ, pākku, teyyavum, iṭaic col.</l>
                </lg>
            </q>
        </cit>
        <cit type="nikantu" xml:id="Cut10.17">
            <ref target="https://archive.org/details/dli.jZY9lup2kZl6TuXGlZQdjZp7kZUy.TVA_BOK_0002448/page/442/mode/1up"><title xml:lang="ta">Cūṭāmaṇi</title> 10.17 <term xml:lang="ta">iṭaiccol, cāriya</term></ref>
            <q rend="block" xml:lang="ta">
                <lg>
                    <l>am(mōṭu), ām, tam, nam, num, ē,</l>
                    <l rend="indent">al, āl; vāṉ, pākku, tillē,</l>
                    <l>em(mōṭu), ēm, maṉṉē, pāṉē, um,</l>
                    <l rend="indent">(īreṭṭu) iṭaic col (eṉpa);</l>
                    <l>am(mōṭu), iṟṟu, aṟṟē, attē,</l>
                    <l rend="indent">al, il, aṉ, āṉē, ai(yē),</l>
                    <l>tam, num(mē), a(vvē), ku(vvē)</l>
                    <l rend="indent">cāriyai (paṉmūṉṟu eṉpa).</l>
                </lg>
            </q>
        </cit>
